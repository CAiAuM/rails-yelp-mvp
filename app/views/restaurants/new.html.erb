<div class="row justify-content-center">
  <div class="col-4">
    <h1>New Restaurant</h1>
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number, as: :tel %>
      <%= f.input :category, collection: Restaurant::CATEGORY  %>
      <div class="d-grid">
        <%= f.submit "Create Restaurant", class: 'btn btn-success'%>
      </div>
    <% end %>
  </div>
</div>
